<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
	<Dialog 
		title="Add new entry">
		<f:SimpleForm> <!-- is there a reason to use smartform here? -->
			<Label text="Sales Order ID"/>
			<Input value="{SoId}"/>
			<Label text="Note"/>
			<Input value="{Note}"/>
		</f:SimpleForm>
		<beginButton>
			<Button text="Create" press="onCreateEntryPressed"/>
		</beginButton>
		<endButton>
			<Button text="Close" press="onCloseAddEntryPressed"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>